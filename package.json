{
  "name": "@opg/interface-builder",
  "version": "1.0.0-alpha.4",
  "description": "React Library for creating WYSIWYG interfaces",
  "author": "OnPoint UI Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onpointglobal/interface-builder.git"
  },
  "homepage": "https://github.com/onpointglobal/interface-builder#readme",
  "main": "lib/index.js",
  "types": "lib",
  "scripts": {
    "start": "tsc -w -p .",
    "build": "npm-run-all build:clean build:ts build:sass build:copy-nonsource build:replace-sass-imports build:replace-sass-requires",
    "build:clean": "rimraf ./lib",
    "build:ts": "tsc -p .",
    "build:sass": "node-sass ./src --output ./lib",
    "build:copy-nonsource": "copyfiles -u 1 \"src/**/*.jpg\" \"src/**/*.png\" \"src/**/*.module.css\"  ./lib",
    "build:replace-sass-imports": "replace 'import (.*?)\\.s[ac]ss(.*)' 'import $1.css$2' ./lib -r",
    "build:replace-sass-requires": "replace 'require\\((.*?).s[ac]ss(.*?)\\)' 'require($1.css$2)' ./lib -r",
    "wp-build": "webpack"
  },
  "keywords": [
    "react",
    "typescript",
    "forms",
    "layout",
    "wysiwyg"
  ],
  "dependencies": {
    "@babel/polyfill": "7.7.0",
    "@reach/component-component": "0.5.0",
    "@syncfusion/ej2-react-grids": "17.3.27",
    "@syncfusion/ej2-react-navigations": "17.3.27",
    "antd": "3.25.1",
    "ckeditor4": "4.13.0",
    "ckeditor4-react": "1.0.0",
    "classnames": "2.2.6",
    "fp-ts": "1.19.4",
    "io-ts": "1.10.4",
    "io-ts-types": "0.4.7",
    "json-logic-js": "1.2.2",
    "lodash": "4.17.15",
    "monaco-editor": "0.18.1",
    "monocle-ts": "1.7.2",
    "react-dnd": "7.7.0",
    "react-dnd-html5-backend": "7.7.0",
    "react-dnd-touch-backend": "0.8.3",
    "react-monaco-editor": "0.32.1"
  },
  "peerDependencies": {
    "react": ">=16.11.0",
    "react-dom": ">=16.11.0"
  },
  "devDependencies": {
    "@types/ckeditor": "4.9.8",
    "@types/classnames": "2.2.9",
    "@types/loadable__component": "5.10.0",
    "@types/lodash": "4.14.146",
    "@types/node": "11.15.2",
    "@types/node-sass": "4.11.0",
    "@types/react": "16.9.11",
    "@types/react-beautiful-dnd": "11.0.3",
    "@types/react-dom": "16.9.4",
    "@types/react-transition-group": "2.9.2",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "concurrently": "4.1.2",
    "copyfiles": "2.1.1",
    "cross-env": "5.2.1",
    "css-loader": "3.2.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-problems": "2.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "1.7.0",
    "newtype-ts": "0.2.1",
    "node-sass": "4.13.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "replace": "1.1.1",
    "rimraf": "3.0.0",
    "sass-loader": "8.0.0",
    "style-loader": "1.0.0",
    "ts-loader": "6.2.1",
    "typed-css-modules": "0.6.3",
    "typed-scss-modules": "0.0.12",
    "typescript": "3.7.2",
    "utility-types": "3.10.0",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10"
  }
}
