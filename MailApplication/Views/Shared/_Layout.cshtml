<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/mailapp.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/moment.min.js")
    @Scripts.Render("~/Scripts/jquery-3.2.1.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/bootstrap-datetimepicker.js")

    @Styles.Render("~/Content/bootstrap-datetimepicker.css")
    @Scripts.Render("~/Scripts/daterangepicker.js")
</head>
<body>


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Seeder", "Index", "Mail", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Messages", "Index", "Mail")</li>
                    @if (ViewContext.HttpContext.User.IsInRole("SUPER USER"))
                    {
                        <li>@Html.ActionLink("Providers", "Index", "Provider")</li>
                    }
                    <li>@Html.ActionLink("Seeds", "Index", "Seed")</li>
                    <li>@Html.ActionLink("Clients", "Index", "Client")</li>
                    <li>@Html.ActionLink("SeedBuckets", "Index", "SeedBucket")</li>
                    <li>@Html.ActionLink("RunLog", "Index", "RunLog")</li>
                    <li>@Html.ActionLink("TemplateTest", "Index", "TemplateTest")</li>
                    <li>@Html.ActionLink("MailClassWarmUp", "Index", "MailClassWarmUp")</li>
                </ul>

                <div class="pull-right">
                    <ul class="nav navbar-nav">
                        @if (ViewContext.HttpContext.User.IsInRole("SUPER USER"))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
                                    <a class="dropdown-item"></a>@Html.ActionLink("Users", "Index", "UserProfile")
                                </div>
                            </li>
                        }
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Seeder</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
