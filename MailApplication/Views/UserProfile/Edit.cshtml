@model BusinessLogic.Model.UserProfile
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="/UserProfile/Update" method="post">
    <div class="container">
        <div class="form-group row">
            <label for="">Name*</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value=@Model.UserName>
        </div>

        <div class="form-group row">
            <label for="">UserName</label>
            <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter userName" value=@Model.UserName>
        </div>

        <div class="form-group row">
            <label for="">Old Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
        </div>

        <div class="form-group row">
            <label for="">New Password</label>
            <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Confirm Password">
        </div>

        <input type="submit" class="btn pull-right btn-success" value="Save" />
    </div>
</form>