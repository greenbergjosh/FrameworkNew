@model IEnumerable<BusinessLogic.Model.UserProfile>
@{
    ViewBag.Title = "Index";
}
<Body>
    <h2>Users</h2>

    <div class="row ">
        <div class="pull-right">
            <button type="button" class="btn btn-success btn-sm glyphicon glyphicon-plus" title="Add" onclick="location.href='/UserProfile/New'"></button>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>Name</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>
                        <button type="button" class="btn btn-warning btn-xs glyphicon glyphicon-edit" title="Edit" onclick="location.href='/UserProfile/Edit/@item.UserId'"></button>
                        <button type="button" class="btn btn-danger btn-xs glyphicon glyphicon-trash" title="Delete" onclick="location.href='/UserProfile/Delete?userId=@item.UserId'"></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</Body>
