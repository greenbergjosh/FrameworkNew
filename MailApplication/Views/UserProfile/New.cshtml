@{
    ViewBag.Title = "New";
}

<h2>New User</h2>

<form action="/UserProfile/Create" method="post">
    <div class="container">
        <div class="form-group row">
            <label for="">Name*</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
        </div>

        <div class="form-group row">
            <label for="">UserName</label>
            <input type="email" class="form-control" id="server" name="userName" placeholder="Enter userName">
        </div>

        <div class="form-group row">
            <label for="">Password</label>
            <input type="password" class="form-control" id="port" name="password" placeholder="Enter password">
        </div>

        <div class="form-group row">
            <label for="">Confirm Password</label>
            <input type="password" class="form-control" id="port" name="confirmPassword" placeholder="Confirm Password">
        </div>

        <div class="form-group row">
            <h4>Roles</h4>
            <div class="dropdown">
                @Html.DropDownList("role", ViewBag.items as SelectList, "Select Role", new { @class = "form-control" })
                </div>
                <input type="submit" class="btn pull-right btn-success" value="Create" />
            </div>
        </div>
</form>