@Styles.Render("~/Content/login.css")
@Styles.Render("~/Content/bootstrap.min.css")
@{
    Layout = null;
}
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="@Url.Content("~/Scripts/jquery-3.2.1.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>



    <form action="/Account/RecoverPasswordSendMessage" method="post">
        <div class="container">
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Enter the mail to recover password</h4>
                        </div>
                        <div class="modal-body">
                            <label for="">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-success" value="Send">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
    <div class="loginmodal-container">
        <h1>Login Seeder</h1><br>
        <form action="/Account/checkMembership" method="post">
            <input type="text" name="user" placeholder="Username">
            <input type="password" name="pass" placeholder="Password">
            <input type="submit" name="login" class="login loginmodal-submit" value="Login">
        </form>
        <div class="login-help pull-right">

            <a href="#" data-toggle="modal" data-target="#myModal"><h4>Forgot Password</h4></a>

        </div>
    </div>
