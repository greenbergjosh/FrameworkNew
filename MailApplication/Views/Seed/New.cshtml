
@{
    ViewData["Title"] = "New";
}

<h2>New Seed</h2>
<hr />
<form action="Create" method="post">
    <div class="container">
        <div class="form-group row">
            <label for="">Name*</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
        </div>

        <div class="form-group row">
            <label for="">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter user">
        </div>

        <div class="form-group row">
            <label for="">User Name</label>
            <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter pass">
        </div>

        <div class="form-group row">
            <label for="">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter server">
        </div>

        <div class="form-group row">
            <label for="">Provider</label>

            <div class="dropdown">
                @Html.DropDownList("provider", ViewBag.items as SelectList, "Select Provider", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-check row">
            @Html.CheckBox("markAsRead", false)
            <label class="form-check-label" for="markAsRead">Mark mails as read</label>
        </div>

        <div class="form-check row">
            @Html.CheckBox("moveToInbox", false)
            <label class="form-check-label" for="moveToInbox">Move mails to Inbox</label>
        </div>

        <div class="form-check row">
            @Html.CheckBox("replayMail", false)
            <label class="form-check-label" for="replayMail">Replay mails</label>
        </div>

        <input type="submit" class="btn pull-right btn-success" value="Create" />
    </div>
</form>
